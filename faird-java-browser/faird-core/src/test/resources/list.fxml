<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Pagination?>


<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:id="rootPane"
            fx:controller="link.rdcn.controller.ListController"
            stylesheets="@style_fx.css"
            style="-fx-background-color: #F1F3F4;">

    <center>
        <VBox fx:id="listContainer" VBox.vgrow="ALWAYS">

            <TableView fx:id="tableView" VBox.vgrow="ALWAYS"
                       style="
                            -fx-font-size: 16px;
                            -fx-background-color: white;
                            -fx-border-color: #DADCE0;
                            -fx-border-radius: 10;
                            -fx-background-radius: 10;
                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 12,0,0,6);
                       ">
            </TableView>

            <Pagination fx:id="pagination" style="-fx-background-color: transparent; -fx-padding: 10 0 0 0;"/>

        </VBox>
    </center>
</BorderPane>